{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2016", "dom"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "composite": true,
  },
  "include": [
    "src/**/*"
  ],
  "types": [
    "typePatches"
  ],
  "references": [
    { "path": "../shared-js" },
    { "path": "../proto-node" },
    { "path": "../y-leveldb" }
  ]
}
